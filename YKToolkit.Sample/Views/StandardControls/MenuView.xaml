        <Menu Grid.Row="0">
            <MenuItem Header="ファイル (_F)">
                <MenuItem Header="開く (_O)" InputGestureText="Ctrl+O" />
                <MenuItem Header="名前を付けて保存 (_A)" InputGestureText="Ctrl+S" />
                <MenuItem Header="閉じる (_C)" InputGestureText="Ctrl+W" />
                <Separator />
                <MenuItem Header="終了 (_X)" InputGestureText="Alt+F4" />
            </MenuItem>
            <MenuItem Header="編集 (_E)">
                <MenuItem Header="切り取り (_X)" InputGestureText="Ctrl+X" />
                <MenuItem Header="コピー (_C)" InputGestureText="Ctrl+C" />
                <MenuItem Header="貼り付け (_P)" InputGestureText="Ctrl+V" />
                <Separator />
                <MenuItem Header="検索 (_F)" InputGestureText="Ctrl+F" />
                <MenuItem Header="置換 (_R)" InputGestureText="Ctrl+H" />
                <Separator />
                <MenuItem Header="書式設定 (_O)" InputGestureText="Ctrl+1" />
            </MenuItem>
            <MenuItem Header="サンプル (_S)">
                <MenuItem Header="おそろしく長いメニュー">
                    <MenuItem Header="ダミー 1" /><MenuItem Header="ダミー 2" /><MenuItem Header="ダミー 3" /><MenuItem Header="ダミー 4" /><MenuItem Header="ダミー 5" /><MenuItem Header="ダミー 6" /><MenuItem Header="ダミー 7" /><MenuItem Header="ダミー 8" /><MenuItem Header="ダミー 9" /><MenuItem Header="ダミー 10" />
