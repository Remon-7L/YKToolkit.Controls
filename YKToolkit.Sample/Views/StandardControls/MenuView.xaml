            </MenuItem>
            <MenuItem Header="無効なメニュー" IsEnabled="False" />
            <MenuItem Header="ヘルプ (_H)">
                <MenuItem Header="バージョン情報 (_V)" />
            </MenuItem>
        </Menu>
    </Grid>
</UserControl>
